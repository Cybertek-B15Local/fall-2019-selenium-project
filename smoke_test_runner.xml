<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Vytrack automation suite" parallel="tests">
    <test name="Vytrack QA3 smoke test with chrome">
        <parameter name="env" value="qa3"/>
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.vytrack.tests.PositiveLoginTests"/>
            <class name="com.vytrack.tests.NegativeLoginTests"/>
        </classes>
    </test>

    <test name="Vytrack QA3 smoke test with firefox">
        <parameter name="env" value="qa3"/>
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.vytrack.tests.PositiveLoginTests"/>
            <class name="com.vytrack.tests.NegativeLoginTests"/>
        </classes>
    </test>

</suite>